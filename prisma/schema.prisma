datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int    @id @default(autoincrement())
  firstName    String
  lastName     String
  phoneNumber  String
  email        String @unique
  password     String
  createdAt    DateTime @default(now())
}



model OTP {
  id          Int      @id @default(autoincrement())
  phoneNumber String
  otp         String
  createdAt   DateTime @default(now())
  expiresAt   DateTime
}